@model List<Films.Models.User>


@{
    <link rel="stylesheet" href="~/css/friends.css" />
}
<div class="container">
    <!-- SEARCH SECTION-->
    <div class="row my-3">
        <div class="col-12 ">
            <form asp-action="SearchFriend" method="get" class="form-inline">
                <div class="input-group w-80">
                    <input style="background-color: rgba(255, 255, 255, 0.1);margin-top: 100px;"
                           type="text"
                           name="email"
                           class="form-control"
                           placeholder="Busca un amigo con su usuario"
                           aria-label="Buscar por usuario"
                           required />
                    <div class="input-group-append">
                        <button style="padding-left: 5px ;margin-top: 100px; margin-left: 20px;" type="submit" class="btn btn-warning">
                            Buscar
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <div class="container mt-5">
        <h1>Mis Amigos</h1>
        @if (Model.Any())
        {
            <div class="list-group">
                @foreach (var friendUser in Model)
                {
                    <div class="list-group-item d-flex justify-content-between align-items-center">
                        <span>@friendUser.Username</span>
                    </div>
                }
            </div>
        }
        else
        {
            <p class="text-muted">AÃºn no tienes amigos agregados.</p>
        }
    </div>
</div>l>